<AnchorPane prefHeight="340.0" prefWidth="531.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginFormController">
   <children>
      <ImageView fitHeight="271.0" fitWidth="531.0" layoutY="69.0" opacity="0.3" pickOnBounds="true">
         <image>
            <Image url="@../../../images/login-background.jpg" />
