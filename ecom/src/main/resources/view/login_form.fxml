      <Label layoutX="266.0" layoutY="260.0" onMouseClicked="#createAccountOnAction" text="Create New Account">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
   </children>
