            <Cursor fx:constant="TEXT" />
         </cursor>
      </JFXTextField>
      <JFXButton layoutX="129.0" layoutY="290.0" nodeOrientation="LEFT_TO_RIGHT" onAction="#btnClickOnActionUserLogin" prefHeight="36.0" prefWidth="128.0" style="-fx-background-color: #0693e3;" text="User Login" textFill="WHITE">
